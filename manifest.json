{
  "manifest_version": 2,
  "name": "Wishlist Total",
  "version": "1.0",
  "author":"Michael Penhallegon",
  
  "page_action": {
    "default_icon":"static/wishlist.png",
    "default_popup":"popup.html"
  },
  "background": {
    "script":["background.js"],
    "page":"background.html"
  },

  "content_scripts": [
    {
      "matches":["http://www.amazon.com/gp/registry*"],
      "js": ["./libs/jquery-2.0.3.js","content.js"]
    }
  ],

  "permissions":[
    "tabs",
    "storage",
    "http://amazon.com/*",
    "http://www.amazon.com/gp/registry/*"
  ]
}